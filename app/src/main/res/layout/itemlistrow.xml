<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="60dp" android:orientation="vertical"
    android:layout_width="fill_parent">

    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView android:textColor="#000000"
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Name" android:textStyle="bold"
                    android:layout_weight="1"
                    android:typeface="monospace"
                    android:height="20sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <TextView android:textColor="#000000"
                    android:id="@+id/projectNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Number"
                    android:layout_weight="1"
                    android:height="20sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp" />

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:id="@+id/projectLocation"
                    android:text="Project Location"
                    android:height="20sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <ImageView android:src="@drawable/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"/>
        </LinearLayout>

    </TableRow>

</TableLayout>